<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:id="@+id/Linears"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:orientation="vertical">
		<ScrollView android:id="@+id/orderScrollView"
			android:layout_width="fill_parent" android:layout_height="300px">
			<LinearLayout android:id="@+id/LinearForScroll"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:orientation="vertical">
				<LinearLayout android:id="@+id/LinearForTitle"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:orientation="horizontal">
					<TextView android:text="@string/brandCode_name"
						android:layout_width="@dimen/labelWidth" android:layout_height="wrap_content"
						android:layout_marginLeft="25dip"></TextView>
					<TextView android:text="@string/format_name"
						android:layout_width="@dimen/labelWidth" android:layout_height="wrap_content"
						android:layout_marginLeft="20dip"></TextView>
					<TextView android:text="@string/price_name"
						android:layout_width="@dimen/labelWidth" android:layout_height="wrap_content"
						android:layout_marginLeft="5dip"></TextView>
					<TextView android:text="@string/brandCount_name"
						android:layout_width="@dimen/labelWidth" android:layout_height="wrap_content"
						android:layout_marginLeft="5dip"></TextView>
					<TextView android:text="@string/vip_name"
						android:layout_width="@dimen/labelWidth" android:layout_height="wrap_content"
						android:layout_marginLeft="15dip"></TextView>
					<TextView android:text="@string/amount_name"
						android:layout_width="@dimen/labelWidth" android:layout_height="wrap_content"
						android:layout_marginLeft="20dip"></TextView>
					<TextView android:text="@string/unit_name"
						android:layout_width="@dimen/labelWidth" android:layout_height="wrap_content"
						android:layout_marginLeft="20dip"></TextView>
				</LinearLayout>
				<LinearLayout android:id="@+id/LinearForContent"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:orientation="horizontal">
					<Spinner android:id="@+id/brandNameSp"
						android:layout_width="120px" android:layout_height="wrap_content"></Spinner>
					<Spinner android:id="@+id/formatSp" android:layout_width="@dimen/labelWidth"
						android:layout_height="wrap_content"></Spinner>
					<TextView android:id="@+id/priceText"
						android:layout_width="@dimen/labelWidth" android:layout_height="wrap_content"
						android:gravity="center_horizontal"></TextView>
					<EditText android:id="@+id/brandCountText"
						android:layout_width="@dimen/labelWidth" android:layout_height="wrap_content"
						android:layout_marginRight="20dip" android:maxLines="1"></EditText>
					<EditText android:id="@+id/vipText" android:layout_width="@dimen/labelWidth"
						android:layout_height="wrap_content" android:layout_marginRight="20dip"
						android:maxLines="1"></EditText>
					<EditText android:id="@+id/amountText"
						android:layout_width="@dimen/labelWidth" android:layout_height="wrap_content"
						android:maxLines="1" android:layout_marginRight="20dip"></EditText>
					<TextView android:id="@+id/unitText" android:layout_width="@dimen/labelWidth"
						android:layout_height="wrap_content"></TextView>
					<TextView android:text="@string/add_name" android:id="@+id/addTxt"
						android:layout_marginLeft="30dip" android:layout_width="wrap_content"
						android:layout_height="wrap_content"></TextView>
				</LinearLayout>
			</LinearLayout>
		</ScrollView>
		<LinearLayout android:id="@+id/LinearRight"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:orientation="horizontal">
			<TextView android:text="@string/date_name"
				android:layout_width="@dimen/labelWidth" android:layout_height="wrap_content"></TextView>
			<EditText android:id="@+id/dateText" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:editable="false"
				android:width="100px"></EditText>
			<TextView android:text="@string/orderType_name"
				android:layout_width="@dimen/labelWidth" android:layout_height="wrap_content"
				android:layout_marginLeft="10dip"></TextView>
			<Spinner android:id="@+id/typeSp" android:layout_width="120px"
				android:layout_height="wrap_content"></Spinner>
			<TextView android:text="@string/total_name"
				android:layout_width="@dimen/labelWidth" android:layout_height="wrap_content"
				android:layout_marginLeft="10dip"></TextView>
			<EditText android:id="@+id/totalAmountText"
				android:layout_width="@dimen/labelWidth" android:layout_height="wrap_content"
				android:editable="false" android:width="@dimen/labelWidth"></EditText>
			<TextView android:text="@string/desc_name"
				android:layout_width="@dimen/labelWidth" android:layout_height="wrap_content"
				android:layout_marginLeft="10dip"></TextView>
			<EditText android:id="@+id/descText" android:layout_width="wrap_content"
				android:width="200px" android:layout_height="wrap_content"
				android:maxLines="1"></EditText>
		</LinearLayout>
		<LinearLayout android:id="@+id/LinearRight"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:orientation="horizontal" android:gravity="right">
			<Button android:text="@string/okBtn_name" android:id="@+id/orderOkBtn"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
			<Button android:text="@string/cancelBtn_name" android:id="@+id/orderCancelBtn"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_marginRight="30px"></Button>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>