<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:id="@+id/Linears"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:orientation="horizontal">
		<ScrollView android:id="@+id/orderScrollView"
			android:layout_width="240px" android:layout_height="fill_parent">
			<LinearLayout android:id="@+id/LinearForScroll"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:orientation="vertical">

				<TableLayout android:id="@+id/brandCodeTableLayout"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:orientation="horizontal" android:stretchColumns="1">
					<TableRow android:id="@+id/brandCodeTableRow"
						android:layout_width="wrap_content" android:layout_height="wrap_content">
						<TextView android:text="商品名称:" android:layout_width="80px"
							android:layout_height="wrap_content"></TextView>
						<EditText android:id="@+id/brandCodeText"
							android:layout_width="fill_parent" android:layout_height="wrap_content"
							android:layout_marginRight="20dip" android:maxLines="1"></EditText>
					</TableRow>
				</TableLayout>
				<TableLayout android:id="@+id/brandCountTableLayout"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:orientation="horizontal" android:stretchColumns="1">
					<TableRow android:id="@+id/brandCountTableRow"
						android:layout_width="wrap_content" android:layout_height="wrap_content">
						<TextView android:text="商品数量:" android:layout_width="80px"
							android:layout_height="wrap_content"></TextView>
						<EditText android:id="@+id/brandCountText"
							android:layout_width="fill_parent" android:layout_height="wrap_content"
							android:layout_marginRight="20dip" android:maxLines="1"></EditText>
					</TableRow>
				</TableLayout>
				<TableLayout android:id="@+id/formatTableLayout"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:orientation="horizontal" android:stretchColumns="1">
					<TableRow android:id="@+id/formatTableRow"
						android:layout_width="wrap_content" android:layout_height="wrap_content">
						<TextView android:text="商品规格:" android:layout_width="80px"
							android:layout_height="wrap_content"></TextView>
						<EditText android:id="@+id/formatText"
							android:layout_width="fill_parent" android:layout_height="wrap_content"
							android:layout_marginRight="20dip" android:maxLines="1"></EditText>
					</TableRow>
				</TableLayout>

				<TableLayout android:id="@+id/amountTableLayout"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:orientation="horizontal" android:stretchColumns="1">
					<TableRow android:id="@+id/amountTableRow"
						android:layout_width="wrap_content" android:layout_height="wrap_content">
						<TextView android:text="商品金额:" android:layout_width="80px"
							android:layout_height="wrap_content"></TextView>
						<EditText android:id="@+id/amountText"
							android:layout_width="fill_parent" android:layout_height="wrap_content"
							android:layout_marginRight="20dip" android:maxLines="1"></EditText>
					</TableRow>
				</TableLayout>

				<TableLayout android:id="@+id/unitTableLayout"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:orientation="horizontal" android:stretchColumns="1">
					<TableRow android:id="@+id/unitTableRow"
						android:layout_width="wrap_content" android:layout_height="wrap_content">
						<TextView android:text="单位:" android:layout_width="80px"
							android:layout_height="wrap_content"></TextView>
						<EditText android:id="@+id/unitText"
							android:layout_width="fill_parent" android:layout_height="wrap_content"
							android:layout_marginRight="20dip" android:maxLines="1"></EditText>
					</TableRow>
				</TableLayout>

				<TableLayout android:id="@+id/vipTableLayout"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:orientation="horizontal" android:stretchColumns="1">
					<TableRow android:id="@+id/vipTableRow"
						android:layout_width="wrap_content" android:layout_height="wrap_content">
						<TextView android:text="商品折扣:" android:layout_width="80px"
							android:layout_height="wrap_content"></TextView>
						<EditText android:id="@+id/vipText" android:layout_width="fill_parent"
							android:layout_height="wrap_content" android:layout_marginRight="20dip"
							android:maxLines="1"></EditText>
					</TableRow>
				</TableLayout>
			</LinearLayout>
		</ScrollView>
		<LinearLayout android:id="@+id/LinearRight"
			android:layout_width="wrap_content" android:layout_height="fill_parent"
			android:orientation="vertical">
			<TableLayout android:id="@+id/dateTableLayout"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:orientation="horizontal" android:stretchColumns="1">
				<TableRow android:id="@+id/dateTableRow"
					android:layout_width="wrap_content" android:layout_height="wrap_content">
					<TextView android:text="订单日期:" android:layout_width="80px"
						android:layout_height="wrap_content"></TextView>
					<EditText android:id="@+id/dateText" android:layout_width="fill_parent"
						android:layout_height="wrap_content" android:editable="false"></EditText>
				</TableRow>
			</TableLayout>
			<TableLayout android:id="@+id/typeTableLayout"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:orientation="horizontal" android:stretchColumns="1">
				<TableRow android:id="@+id/typeTableRow"
					android:layout_width="wrap_content" android:layout_height="wrap_content">
					<TextView android:text="订单类型:" android:layout_width="80px"
						android:layout_height="wrap_content" android:layout_marginTop="10dip"></TextView>
					<RadioGroup android:id="@+id/typeRadioGroup"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:orientation="horizontal">
						<RadioButton android:text="预订单" android:id="@+id/preOrderRadio"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:checked="true"></RadioButton>
						<RadioButton android:text="订单" android:id="@+id/orderRadio"
							android:layout_width="wrap_content" android:layout_height="wrap_content"></RadioButton>
					</RadioGroup>
				</TableRow>
			</TableLayout>
			<TableLayout android:id="@+id/descTableLayout"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:orientation="horizontal" android:stretchColumns="1">
				<TableRow android:id="@+id/descTableRow"
					android:layout_width="wrap_content" android:layout_height="wrap_content">
					<TextView android:text="备注:" android:layout_width="80px"
						android:layout_height="wrap_content"></TextView>
					<EditText android:id="@+id/descText" android:layout_width="fill_parent"
						android:layout_height="wrap_content" android:height="80px"></EditText>
				</TableRow>
			</TableLayout>
			<TableLayout android:id="@+id/actionTableLayout"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:orientation="horizontal">
				<TableRow android:id="@+id/actionTableRow"
					android:layout_width="wrap_content" android:layout_height="wrap_content">
					<Button android:text="提交" android:id="@+id/orderOkBtn"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_marginLeft="80px"></Button>
					<Button android:text="取消" android:id="@+id/orderCancelBtn"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_marginLeft="30px"></Button>
				</TableRow>
			</TableLayout>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>