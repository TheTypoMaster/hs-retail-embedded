<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content">
	<LinearLayout android:id="@+id/LinearLayout01"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:orientation="vertical" android:layout_gravity="center">
		<Spinner android:id="@+id/Spinner01" android:layout_width="fill_parent"
			android:layout_height="wrap_content"></Spinner>
		<LinearLayout android:id="@+id/LinearLayout02"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:orientation="horizontal" android:layout_gravity="center">
			<TextView android:id="@+id/item1" android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:width="30dip"></TextView>
			<TextView android:id="@+id/item2" android:layout_height="wrap_content"
				android:text="名称" android:textSize="14dip" android:width="100dip"
				android:layout_width="wrap_content"></TextView>
			<TextView android:id="@+id/item3" android:text="数量"
				android:textSize="14dip" android:width="50dip"
				android:layout_width="wrap_content" android:layout_height="fill_parent"></TextView>
			<TextView android:id="@+id/item4" android:layout_height="wrap_content"
				android:text="金额" android:width="50dip" android:textSize="14dip"
				android:layout_width="wrap_content"></TextView>
			<TextView android:id="@+id/item5" android:layout_height="wrap_content"
				android:text="日期" android:width="100dip" android:textSize="14dip"
				android:layout_width="wrap_content"></TextView>
		</LinearLayout>
		<FrameLayout android:id="@+id/FrameLayout01"
			android:layout_width="fill_parent" android:layout_height="300px"
			android:layout_weight="1">
			<ListView android:id="@+id/ListView01" android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:drawSelectorOnTop="false">
			</ListView>
		</FrameLayout>
		<LinearLayout android:id="@+id/LinearLayout03"
			android:layout_width="wrap_content" android:layout_height="wrap_content">
			<Button android:text="首页" android:id="@+id/queryButton01"
				android:layout_marginLeft="30dip" android:layout_width="wrap_content"
				android:layout_height="wrap_content"></Button>
			<Button android:text="上页" android:id="@+id/queryButton02"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
			<Button android:text="下页" android:id="@+id/queryButton03"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
			<Button android:text="尾页" android:id="@+id/queryButton04"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
			<Button android:text="返回" android:id="@+id/queryButton05"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
		</LinearLayout>
	</LinearLayout>
</ScrollView>