<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ScrollView android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<TextView android:text="进货报表"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		</TextView>
	</ScrollView>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		
		<Button android:layout_width="90sp"
			android:layout_height="wrap_content" android:text="开始时间"
			android:id="@+id/startTimeButton" android:textSize="12sp"/>
			
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="到"/>
		<Button android:layout_width="90sp"
			android:layout_height="wrap_content" android:text="结束时间"
			android:id="@+id/endTimeButton" android:textSize="12sp"/>
			
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="  条件"/>
		<Spinner android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/conditionSpinner"/>
			
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="  查询内容"/>
		<EditText android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/contentTView" android:singleLine="true"/>
	</LinearLayout>

</LinearLayout>