			<TableRow android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dip"
				android:layout_marginRight="10dip"
				android:layout_marginTop="50sp">
				
				
				
				<TextView android:text="退货商品:"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="10dip">
				</TextView>
				<EditText android:id="@+id/returnInsertEditTextBarcode"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:width="250sp"
					android:singleLine="true"
					android:hint="不能为空">
				</EditText>
			</TableRow>
			<TableRow android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dip"
				android:layout_marginRight="10dip">
				<TextView android:text="退货数量:"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="10dip">
				</TextView>
				<EditText android:id="@+id/returnInsertEditTextNumber"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:width="250sp"
					android:singleLine="true"
					android:hint="默认为１">
				</EditText>
			</TableRow>
			<TableRow android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dip"
				android:layout_marginRight="10dip">
				<TextView
					android:text="退货理由:"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 				
					android:layout_marginRight="10dip">
				</TextView>
				<EditText android:id="@+id/returnInsertEditTextContent"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" 
					android:width="250sp"
					android:lines="5"
					android:hint="不超过２５５个字符">
				</EditText>
			</TableRow>
		</TableLayout>
		
		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<Button android:text="确定" android:id="@+id/returnInsertButtonConfirm"
				android:layout_width="80dip"
				android:layout_height="wrap_content"
				android:layout_marginLeft="80dip">
			</Button>
			<Button android:text="取消" android:id="@+id/returnInsertButtonCancel"
				android:layout_width="80dip"
				android:layout_height="wrap_content"
				android:layout_marginLeft="60sp">
			</Button>
