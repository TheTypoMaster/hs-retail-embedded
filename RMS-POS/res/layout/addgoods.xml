<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" android:layout_gravity="center">
	<TableLayout>

		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:id="@+id/TextView01"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="商品名称:">
			</TextView>
			<EditText android:id="@+id/goodsNameEditText"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:width="250sp"
				android:maxLines="1">
			</EditText>
		</TableRow>

		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:text="厂家名称:" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">
			</TextView>

			<Spinner android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/allManufacturerSpinner"/>

		</TableRow>
		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:id="@+id/TextView02"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="种类:">
			</TextView>
			<Spinner android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/allKindSpinner"/>
		</TableRow>
		
		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="价格:">
			</TextView>
			<Button android:id="@+id/addPriceButton" android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
		</TableRow>
	 
	</TableLayout>
	<TextView android:id="@+id/loginInfo" android:visibility="visible"></TextView>
	<TableRow >
		<Button android:text="确定" android:id="@+id/addGoodsOk"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginLeft="100sp">
		</Button>
		<Button android:text="取消" android:id="@+id/addGoodsReset"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		</Button>
	</TableRow>
</TableLayout>
