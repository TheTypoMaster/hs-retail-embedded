<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" android:layout_gravity="center">
	<TableLayout>
		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView  
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="名称:">
			</TextView>
			<EditText android:id="@+id/name"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:width="250sp"
				android:maxLines="1">
			</EditText>
		</TableRow>

		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:text="父类别:" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">
			</TextView>

			<TextView android:text="@+id/parentName"
				android:id="@+id/parentName" android:layout_width="wrap_content"
				android:layout_height="wrap_content">
			</TextView>

		</TableRow>
		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="备注:">
			</TextView>
			<EditText android:id="@+id/comment"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:width="250sp"
				android:lines="2">
			</EditText>
		</TableRow>
	</TableLayout>
	
	<TableRow>
		 
			<Button android:text="确定" android:id="@+id/ok"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_marginLeft="100sp">
			</Button>
		 
			<Button android:text="取消" android:id="@+id/reset"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" >
			</Button>
		 
	</TableRow>
	 
</TableLayout>
