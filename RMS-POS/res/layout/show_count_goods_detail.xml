<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<LinearLayout 
		android:layout_gravity="center"
		android:orientation="vertical" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TableLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingTop="10sp"> 
			<TableRow style="@style/DialogTableRowStyle">
				<TextView android:text="类别:"
					style="@style/DialogTextViewStyle">
				</TextView>
				<EditText android:id="@+id/goodsKindShowCountGoodsDetail"
					style="@style/DialogEnableEditTextStyle">
				</EditText>
			</TableRow>
			<TableRow style="@style/DialogTableRowStyle">
				<TextView android:text="厂家:"
					style="@style/DialogTextViewStyle">
				</TextView>

				<EditText android:id="@+id/manuNameShowCountGoodsDetail"
					style="@style/DialogEnableEditTextStyle">
				</EditText>

			</TableRow>
			<TableRow style="@style/DialogTableRowStyle">
				<TextView
					style="@style/DialogTextViewStyle"
					android:text="名称:">
				</TextView>

				<EditText android:id="@+id/goodsNameShowCountGoodsDetail"
					style="@style/DialogEnableEditTextStyle">
				</EditText>
			</TableRow>

			<TableRow style="@style/DialogTableRowStyle">
				<TextView style="@style/DialogTextViewStyle" android:text="单位:">
				</TextView>

				<EditText android:id="@+id/unitNameShowCountGoodsDetail"
					style="@style/DialogEnableEditTextStyle">
				</EditText>
			</TableRow>
			
			<TableRow style="@style/DialogTableRowStyle">
				<TextView style="@style/DialogTextViewStyle" android:text="进价:">
				</TextView>

				<EditText android:id="@+id/goodsPriceShowCountGoodsDetail"
					style="@style/DialogEnableEditTextStyle">
				</EditText>
			</TableRow>
			
			<TableRow style="@style/DialogTableRowStyle">
				<TextView 
					style="@style/DialogTextViewStyle" android:text="数量:">
				</TextView>

				<EditText android:id="@+id/goodsCountShowCountGoodsDetail"
					style="@style/DialogEnableEditTextStyle">>
				</EditText>
			</TableRow>
			
			<TableRow style="@style/DialogTableRowStyle">
				<TextView style="@style/DialogTextViewStyle" android:text="总额:">
				</TextView>

				<EditText android:id="@+id/totalPriceShowCountGoodsDetail"
					style="@style/DialogEnableEditTextStyle">
				</EditText>
			</TableRow>
			
			<TableRow style="@style/DialogTableRowStyle">
				<TextView style="@style/DialogTextViewStyle"
					 android:text="  ">
				</TextView>
				<Button android:text="确定" android:id="@+id/okButtonShowCountGoodsDetail"
				android:layout_width="80dip"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_marginLeft="90sp"
				android:layout_marginRight="30sp">
				</Button>
			</TableRow>
			
		</TableLayout>
	</LinearLayout>
</ScrollView>
