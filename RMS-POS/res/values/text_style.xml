<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="DialogTextViewfillWrapMediumStyle" > 	
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginRight">10sp</item>
        <item name="android:layout_marginLeft">10sp</item>
    </style>

	<style name="TextViewWrapListLargeStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">?android:attr/listPreferredItemHeight</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>
	
	<style name="TextViewfillWrapLargeStyle" > 	
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:singleLine">true</item>
    </style>
	
	<style name="TextViewfillWrapMediumStyle" > 	
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>      
        <item name="android:singleLine">true</item>
    </style>
	
	<style name="TextViewfillWrapSmallStyle" > 	
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <!-- 
    <item name="android:gravity">center</item>
    <item name="android:layout_gravity">center</item> 
     -->
    
    
	
    <style name="CodeFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
    </style>
    <style name="listItemStyle" >
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:gravity">center_vertical</item>
        
    </style>
    <style name="listItemTextViewStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">?android:attr/listPreferredItemHeight</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="listItemMarqueeTextViewStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">?android:attr/listPreferredItemHeight</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
    </style>
    
    <style name="longTextViewStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">?android:attr/listPreferredItemHeight</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginRight">80dip</item>
        <!-- <item name="android:layout_marginLeft">20dip</item> -->
    </style>
    <style name="shortTextViewStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">?android:attr/listPreferredItemHeight</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginRight">30dip</item>
    </style>
 </resources>
